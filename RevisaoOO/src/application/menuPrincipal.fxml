<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="bpPrincipal" minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MenuController">
   <top>
      <MenuBar prefWidth="141.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Cadastro">
            <items>
              <MenuItem fx:id="miAgencia" mnemonicParsing="false" onAction="#onAgencia" text="Agência" />
                  <MenuItem fx:id="miCliente" mnemonicParsing="false" onAction="#onCliente" text="Cliente" />
                  <MenuItem fx:id="miConta" mnemonicParsing="false" onAction="#onConta" text="Conta" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Ações">
              <items>
                <MenuItem fx:id="miMovimentos" mnemonicParsing="false" onAction="#onMovimentos" text="Movimentos" />
                  <MenuItem fx:id="miRelatorio" mnemonicParsing="false" onAction="#onRelatorio" text="relatório" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Ajuda">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <Label text="SISTEMA BANCÁRIO" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold Italic" size="64.0" />
         </font>
      </Label>
   </center>
</BorderPane>
